{% extends 'base.html.twig' %}
{%  form_theme form "form2style.html.twig" %}
{% block title %}Estimation de surface{% endblock %}

{% block body %}

    {% for message in app.flashes('notice') %}
        <div class="alert alert-success w-90 ml-auto mr-auto mb-5 text-center" role="alert">
            <h4 class="alert-heading">{{ message }}</h4>
        </div>
    {% endfor %}
    <div class="container mt-5">
        {{ form_start(form) }}
        <small class="form2error">{{ form_errors(form) }}</small>
        <div class="row mb-3">
            <td class="form2input">{{form_label(form.budget)}}<br>
                {{ form_widget(form.budget) }}</td><br>

            <td class="form2input">{{form_label(form.code_postal)}}<br>
                {{form_widget(form.code_postal)}}</td><br>

            <td class="form2input">{{form_label(form.type)}}<br>
                {{form_widget(form.type)}}</td>
        </div>
            {{ form_widget(form.save , {'attr': {'class': 'btn btn-primary btn-lg btn-block'}}) }}
        {{ form_end(form) }}


        <div class="row d-flex justify-content-between mt-5">
            <div class="border border-primary rounded text-center p-2">
                {% if type == null  or type=="1" and surface != null%}
                <div class="pl-5 pr-5 ">
                    <h3>Surface du bâtiment</h3>
                </div>
                <div class="p-5">
                    <h1> {{ surface }}m&#178;</h1>
                </div>
                <div class="pl-5 pr-5 ">
                    <h3>Surface Max Terrain</h3>
                </div>
                <div class="p-5">
                    <h1> {{ terrainMax }}m&#178;</h1>
                </div>
                {% elseif type == "1" and surface == null %}
                    <div class="pl-5 pr-5 ">
                        <h3>Surface Max bâtiment</h3>
                    </div>
                    <div class="p-5">
                        <h1> {{ surfaceMax }}m&#178;</h1>
                    </div>
                    <div class="pl-5 pr-5 ">
                        <h3>Suface Terrain</h3>
                    </div>
                    <div class="p-5">
                        <h1> {{ terrain }}m&#178;</h1>
                    </div>
                {% else %}
                    <div class="pl-5 pr-5 ">
                        <h3>Surface Appartement</h3>
                    </div>
                    <div class="p-5">
                        <h1> {{ surface }}m&#178;</h1>
                    </div>
                {% endif %}
            </div>
            <div class=" text-center p-2">
                {% if type != null %}
                    {% if type == "1" %}
                        <img class="image_function2" src="{{'assets/image/maison.png'}}">
                    {% elseif type == "2"%}
                        <img class="image_function2" src="{{'assets/image/appartement.png'}}">
                    {% endif %}
                {% endif %}
            </div>
            {% if type == null  or type=="1" and surface != null%}
            <div class="border border-primary rounded text-center p-2">

                    <div class="pl-5 pr-5 ">
                        <h3>Surface Max bâtiment</h3>
                    </div>
                    <div class="p-5">
                        <h1> {{ surfaceMax }}m&#178;</h1>
                    </div>
                    <div class="pl-5 pr-5 ">
                        <h3>Suface Terrain</h3>
                    </div>
                    <div class="p-5">
                        <h1> {{ terrain }}m&#178;</h1>
                    </div>
            </div>
            {% else %}
                <div class="text-center p-2">

                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
    <div id="bodyFunction3">
	    <h1>Près de chez moi :</h1>
	    <p><a href="https://www.coordonnees-gps.fr/">Trouver mes coordonnées GPS</a></p>
	    <div class="formFunction3">
	        {{ form_start(form) }}
	            <td class="col-sm">Latitude : {{ form_widget(form.latitude) }}</td>
	            <td class="col-sm">Longitude : {{form_widget(form.longitude)}}</td>
	            <td class="col-sm">Distance (en m) : {{form_widget(form.distance)}}</td>
	            <button type="submit" class="btn btn-success" >Rechercher</button>
	        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}